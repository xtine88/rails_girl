<%= form_with(model: adventure, local: true) do |form| %>
  <% if adventure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(adventure.errors.count, "error") %> prohibited this adventure from being saved:</h2>

      <ul>
      <% adventure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :adventure_name, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, id: :adventure_description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, id: :adventure_location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :visit %>
      <%= form.date_select :visit, id: :adventure_visit %>
    </div>

    <div class="form-group">
      <%= form.label :picture %>
      <%= form.file_field :picture, id: :adventure_picture %>
    </div>

    <div class="actions">
      <%= form.submit 'Create Adventure', :class => 'btn btn-warning' %>
    </div>
  </form>
<% end %>
